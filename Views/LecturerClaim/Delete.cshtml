@model W98.Models.LecturerClaim

<h2>Delete Lecturer Claim</h2>

<h3>Are you sure you want to delete this claim?</h3>

<div>
    <h4>@Model.Name @Model.Surname</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Hourly Rate</dt>
        <dd class="col-sm-10">@Model.HourlyRate</dd>

        <dt class="col-sm-2">Hours Worked</dt>
        <dd class="col-sm-10">@Model.HoursWorked</dd>

        <dt class="col-sm-2">Module Code</dt>
        <dd class="col-sm-10">@Model.ModuleCode</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="ID" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Details" class="btn btn-secondary">Cancel</a>
    </form>
</div>
